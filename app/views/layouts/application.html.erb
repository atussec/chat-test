<!DOCTYPE html>
<html>
  <head>
    <title>ChatTest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo">Chat</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if user_signed_in? %>
        <li><%= link_to "Log out", main_app.destroy_user_session_path, method: :delete %></li>
        <li><%= link_to "Chat", chatrooms_path %></li>
        <% else %>

        <li><%= link_to "Login", new_user_session_path, class: "right waves-effect waves-light btn navbarBtn" %></li>
        <li><%= link_to "Register", new_user_registration_path, class: "right waves-effect waves-light btn navbarBtn" %></li>
<% end %>
      </ul>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
